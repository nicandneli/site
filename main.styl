@import('nib')
@import('jeet')

*
  box-sizing border-box

html, body
  background center/44px url(/crown-tile.png)
  margin 0
  padding 0
  font-family Palatino "Palatino Linotype" "Palatino LT STD" "Book Antiqua" Georgia serif
  width 100%
  height 100%

.container
  center(900px)
  padding 0 20px

div, h1
  margin 0
  padding 0
p
  color #fff
  font-size 1.2em
  line-height 2
i
  margin-right 0.5em
a
  &:link, &:visited, &:hover, &:active
    color #fff
    cursor pointer
    text-decoration none
  &:hover
    opacity 0.4

#header
  background no-repeat #e6e6e6
  border 8px solid black
  border-left-width 0
  border-right-width 0
  width 100%
  // height 130px
  margin 0
  padding 0

  h1
    font-size 0
  img
    max-width 100%
    padding 40px 0 40px

.display
  display relative
  width 100%
  height 70%
  background-size cover
  background-position center
.thumbs
  // margin 20px
  absolute top 20px left 20px
  .thumb
    &:hover
      opacity 1
      border-color #fff


    border 2px solid black
    display block
    background-size cover
    background-position center
    background-repeat no-repeat
    width 100px
    height 100px
    box-shadow 0px 5px 15px rgba(black, 0.9)
    margin-bottom 20px